{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/ZhanHong-11/FIT3179-A2/main/data/region_total_electricty_source.csv"
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Continent_selection == null || datum.Region == Continent_selection"
    },
    {
      "calculate": "indexof(['Fossil Fuels', 'Renewables Energy', 'Nuclear'], datum.Electricity_source)",
      "as": "order"
    }
  ],
  "mark": {"type": "area"},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "axis": {
        "grid": false
      }
    },
    "y": {
      "aggregate": "sum",
      "field": "Value",
      "title": "Total Electricity Generation (Terawatt Hours)",
      "stack": true
    },
    "color": {
      "field": "Electricity_source",
      "type": "nominal",
      "title": "Source of Electricity"
    },
    "order": {
      "field": "order",
      "type": "ordinal"
    },
    "tooltip": [
      {
        "field": "Electricity_source",
        "type": "nominal",
        "title": "Source of Electricity"
      },
      {
        "field": "Year",
        "type": "temporal",
        "format": "%Y",
        "title": "Year"
      }
    ]
  }
}