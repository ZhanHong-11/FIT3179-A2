{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "hconcat": [
    {
      "width": 700,
      "height": 300,
      "data": {
        "url": "https://raw.githubusercontent.com/ZhanHong-11/FIT3179-A2/main/data/low_carbon_electricity.csv"
      },
      "mark": {
        "type": "bar",
        "height": 11,
        "cornerRadiusEnd": 10,
        "yOffset": 3,
        "color": "#dcbb9c"
      },
      "encoding": {
        "y": {
          "field": "Entity",
          "type": "nominal",
          "sort": {
            "field": "Low-carbon electricity (% electricity)",
            "order": "descending"
          },
          "scale": {
            "padding": 0
          },
          "axis": {
            "domain": false,
            "ticks": false,
            "grid": true,
            "bandPosition": 0,
            "labelAlign": "left",
            "labelPadding": -3,
            "labelBaseline": "middle",
            "labelOffset": -8,
            "title": null
          }
        },
        "x": {
          "field": "Low-carbon electricity (% electricity)",
          "type": "quantitative",
          "axis": {
            "grid": false,
            "tickCount": 10
          },
          "title": "Percentage of Low-Carbon Electricity (%)"
        },
        "tooltip": [
          {
            "field": "Entity",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Low-carbon electricity (% electricity)",
            "type": "quantitative",
            "title": "Low Carbon Electricity (%)"
          }
        ],
        "fillOpacity": {
          "condition": {
            "param": "selectedCountry",
            "value": 1
          },
          "value": 0.3
        }
      },
      "params": [
        {
          "name": "selectedCountry",
          "value": "Malaysia",
          "select": {
            "type": "point",
            "on": "click",
            "fields": [
              "Entity"
            ],
            "clear": false
          } 
        }
      ]
    },
    {
      "width": 250,
      "height": 300,
      "data": {
        "url": "https://raw.githubusercontent.com/ZhanHong-11/FIT3179-A2/main/data/source_of_electricity.csv"
      },
      "layer": [
        {
          "transform": [
            {
              "filter": {
                "param": "selectedCountry"
              }
            }
          ],
          "mark": {
            "type": "arc",
            "innerRadius": 75
          },
          "encoding": {
            "theta": {
              "field": "Value(TWh)",
              "type": "quantitative"
            },
            "color": {
              "field": "Electricity_Source",
              "type": "nominal",
              "legend": {
                "orient": "bottom",
                "title": null
              },
              "scale": {
                "domain": [
                  "Electricity from fossil fuels (TWh)",
                  "Electricity from renewables (TWh)",
                  "Electricity from nuclear (TWh)"
                ],
                "range": [
                  "#a65628",
                  "#4daf4a",
                  "#f0ba32 "
                ]
              }
            },
            "tooltip": [
              {
                "field": "Electricity_Source",
                "type": "nominal",
                "title": "Source of Electricity"
              },
              {
                "field": "Value(TWh)",
                "type": "quantitative"
              }
            ]
          }
        },
        {
          "transform": [
            {
              "filter": {
                "param": "selectedCountry"
              }
            },
            {
              "aggregate": [
                {
                  "op": "distinct",
                  "field": "Entity",
                  "as": "Counter"
                }
              ]
            },
            {
              "calculate": "datum.Counter == 1 ? selectedCountry.Entity : 'Select a Country'",
              "as": "description"
            }
          ],
          "mark": {
            "type": "text",
            "align": "center",
            "baseline":"middle"
          },
          "encoding": {
            "text": {
              "field": "description"
            }
          }
        }
      ]
    }
  ]
}